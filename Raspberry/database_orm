#orm-mapper library
from peewee import *
import datetime


database = MySQLDatabase('sgas',
                                    user='root',
                                    password='',
                                    host='127.0.0.1'
                                    )

class User(Model):
    #ask tim about this
    
    class Meta:
        database = database

class device(Model):
    deviceID = IntegerField()
    name = CharField()
    ipAddr = CharField()

    class Meta:
        database = database

#m to n connection between user and device
class can_see(Model):
    userID = ForeignKeyField(User, backref='can_see')
    deviceID = ForeignKeyField(device, backref='can_see')

    class Meta:
        database = database


class sensor(Model):
    sensorID = IntegerField()
    name = CharField()
    type = CharField()
    pin = CharField()
    address = CharField()
    
    class Meta:
        database = database

class sensorValue(Model):
    deviceID = ForeignKeyField(sensor, backref='values')
    value = FloatField()
    timestamp = DateTimeField(default=datetime.datetime.now)

    class Meta:
        database = database
